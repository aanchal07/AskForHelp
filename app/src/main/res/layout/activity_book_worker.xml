<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#ff7bf7ff"
    tools:context="com.shikhar.helpme.BookWorker">

    <Button

        android:id="@+id/b1"
        android:text="27 APRIL 2015, SUNDAY"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/availablebutton"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/b2"
        android:text="28 APRIL 2015, MONDAY"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="@drawable/availablebutton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/b3"
        android:layout_margin="10dp"
        android:text="29 APRIL 2015, TUEDAY"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="@drawable/notavailablebutton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/b4"
        android:layout_margin="10dp"
        android:text="30 APRIL 2015, WEDNESDAY"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="@drawable/availablebutton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:id="@+id/b5"
        android:text="1 MAY 2015, THURSDAY"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="@drawable/notavailablebutton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/b6"
        android:layout_margin="10dp"
        android:text="2 MAY 2015, FRIDAY"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="@drawable/notavailablebutton"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:id="@+id/b7"
        android:text="3 MAY 2015, SATURDAY"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:background="@drawable/availablebutton"/>

</LinearLayout>
